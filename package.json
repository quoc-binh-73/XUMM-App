{
  "name": "xumm",
  "version": "0.5.1",
  "private": false,
  "license": "SEE LICENSE IN <LICENSE>",
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "prettier": "prettier --write `find -E src -regex \".*.(ts|tsx)\"`",
    "check": "eslint --ignore-path .gitignore --ignore-pattern node_modules --quiet . && yarn run tsc",
    "tsc": "NODE_OPTIONS=--max_old_space_size=12000 tsc --noEmit",
    "test": "jest --forceExit --detectOpenHandles",
    "test:e2e:ios": "detox build -c ios.sim.release && detox test -c ios.sim.release ",
    "test:e2e:android": "detox build -c android.emu.release && detox test -c android.emu.release",
    "update-snapshots": "jest --updateSnapshot",
    "storybook": "start-storybook -p 7007",
    "postinstall": "make post-install",
    "prestorybook": "rnstl"
  },
  "dependencies": {
    "@react-native-community/blur": "3.6.0",
    "@react-native-community/netinfo": "5.9.4",
    "bignumber.js": "9.0.0",
    "fuse.js": "6.4.0",
    "i18n-js": "3.7.1",
    "lodash": "4.17.19",
    "moment": "2.27.0",
    "moment-timezone": "0.5.31",
    "node-libs-browser": "2.2.1",
    "react": "16.11.0",
    "react-native": "0.62.2",
    "react-native-camera": "3.31.0",
    "react-native-device-info": "5.6.1",
    "react-native-fingerprint-scanner": "6.0.0",
    "react-native-firebase": "5.6.0",
    "react-native-interactable": "2.0.1",
    "react-native-keychain": "4.0.5",
    "react-native-linear-gradient": "2.5.6",
    "react-native-navigation": "6.9.0",
    "react-native-webview": "10.3.2",
    "realm": "3.6.5",
    "ripple-binary-codec": "0.2.6",
    "rippled-ws-client": "1.6.3",
    "uuid": "8.2.0",
    "xrpl-accountlib": "0.3.6",
    "xrpl-orderbook-reader": "0.3.1",
    "xrpl-tagged-address-codec": "0.2.1",
    "xumm-string-decode": "0.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/runtime": "^7.9.2",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addon-ondevice-actions": "^5.3.19",
    "@storybook/addon-storyshots": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/react-native": "^5.3.19",
    "@storybook/react-native-server": "^5.3.19",
    "@types/detox": "^16.4.1",
    "@types/enzyme": "^3.10.5",
    "@types/i18n-js": "^3.0.3",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.154",
    "@types/react": "^16.9.35",
    "@types/react-native": "^0.62.12",
    "@types/react-test-renderer": "^16.9.2",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-jest": "^25.5.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-rewrite-require": "^1.14.5",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "coveralls": "^3.1.0",
    "detox": "17.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-native": "^3.8.1",
    "eslint-plugin-spellcheck": "^0.0.17",
    "eslint-plugin-typescript": "^0.14.0",
    "fetch-mock": "^9.10.1",
    "jest": "^25.5.3",
    "metro-react-native-babel-preset": "^0.59.0",
    "mocha": "^7.2.0",
    "patch-package": "^6.2.2",
    "prettier": "^2.0.5",
    "react-dom": "16.11.0",
    "react-native-storybook-loader": "^1.8.1",
    "react-test-renderer": "16.11.0",
    "ts-jest": "^26.1.1",
    "typescript": "3.9.5"
  },
  "detox": {
    "test-runner": "mocha",
    "runner-config": "e2e/mocha.opts",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/XUMM.app",
        "build": "xcodebuild -workspace ios/XUMM.xcworkspace -scheme XUMM -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 11 Pro Max"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/XUMM.app",
        "build": "xcodebuild -workspace ios/XUMM.xcworkspace -scheme XUMM -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 11 Pro Max"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew app:assembleDebug app:assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_28"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew app:assembleRelease app:assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_28"
      }
    }
  },
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./src/components"
      ],
      "pattern": "**/*.stories.tsx",
      "outputFile": "./.storybook/storyLoader.js"
    }
  }
}
